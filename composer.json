{
    "name": "flume/flume-php",
    "description": "Filter Logic Unification & Mapping Engine",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Flume\\FlumePhp\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Thomas Meschke",
            "email": "thomas.meschke@googlemail.com"
        }
    ],
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5",
        "friendsofphp/php-cs-fixer": "^3.89",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "scripts": {
        "stan": "phpstan analyse -c dev/phpstan/phpstan.dist.neon",
        "format": "php-cs-fixer fix src --config=dev/php-cs-fixer/.php-cs-fixer.php",
        "test": "phpunit -c tests/phpunit.xml"
    }
}
